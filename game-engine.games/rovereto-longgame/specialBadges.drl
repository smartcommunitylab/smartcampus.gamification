    Game( $gameId: id)
    Player( $playerId : id)
then
	log("apply \'zero_impact badge\'");
	$bc.getBadgeEarned().add('zero_impact');
	insert( new BadgeNotification($gameId,$playerId,'zero_impact'));
	update( $bc );
end